<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>


<VBox xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="thsst.calvis.editor.controller.MemoryController">
    <children>
        <AnchorPane fx:id="paneMemoryFilter" prefHeight="28.0"/>
        <AnchorPane VBox.vgrow="ALWAYS">
            <children>
                <TableView fx:id="tableViewMemory" stylesheets="@../css/register.css" AnchorPane.bottomAnchor="0.0"
                           AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <columns>
                        <TableColumn fx:id="colMemoryLabel" minWidth="50" text="Label"/>
                        <TableColumn fx:id="colMemoryAddress" prefWidth="100" minWidth="100" text="Address"/>
                        <TableColumn fx:id="colMemoryRepresentation" sortable="false" text="Value"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </children>
        </AnchorPane>
    </children>
</VBox>
